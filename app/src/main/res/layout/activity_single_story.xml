<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleStoryActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/singlestory_apptoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:contentScrim="@color/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
        app:titleEnabled="true">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/singlestory_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_alignParentEnd="true">

                       <ImageView
                            android:id="@+id/image_arrow_back"
                          android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                          android:layout_margin="20dp"
                          android:src="@drawable/ic_arrow_back_black_24dp"/>


                      <TextView
                          android:id="@+id/story_title"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                           android:layout_margin="20dp"
                          android:textColorHint="@color/white"
                            android:layout_marginRight="10dp"
                           android:layout_toRightOf="@+id/image_arrow_back"
                           android:hint="Diary of a Wimpy Kid"
                           android:textStyle="bold" />
                   </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/story_description"
                android:layout_below="@+id/toolbar"
                >

                <ImageView
                    android:id="@+id/story_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/story_bg_ic"
                    android:scaleType="fitXY"
                    />

                <ImageView
                    android:id="@+id/favourite_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/story_thumbnail"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="5dp"
                    android:onClick="fav"
                    android:src="@drawable/ic_fav_border" />

                <TextView
                    android:id="@+id/author_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/story_thumbnail"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="25dp"
                    android:hint="@string/by_author_name"
                    android:text="@string/by_author_name"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

        <include layout="@layout/single_story_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"

        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/border" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/action_home"
            android:src="@drawable/ic_action_home"
            android:padding="20dp"
            android:layout_marginRight="75dp"
            android:layout_toLeftOf="@id/add_black_button" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_black_button"
            android:src="@drawable/ic_add_black_24dp"
            android:padding="20dp"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/bookmark_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bookmark_border_black_24dp"
            android:layout_alignParentEnd="true"
            android:padding="20dp" />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>